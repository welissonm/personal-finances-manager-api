{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "strict": true,                           
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                       
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@models/*":["./src/models/*"],
      "@controllers/*":["./src/controllers/*"],
      "@middlewares/*":["./src/middlewares/*"],
      "@services/*":["./src/services/*"],
      "@config/*":["./src/config/*"],
    }
  }
}
